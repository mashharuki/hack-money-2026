# Environment Variables for Foundry Project
# Copy this file to .env and fill in your values
# NEVER commit .env to git - it contains sensitive keys

# ==================================
# RPC URLs
# ==================================

# Ethereum Mainnet
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ETH_RPC_URL=${MAINNET_RPC_URL}

# Ethereum Testnets
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Layer 2 Networks
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ==================================
# Private Keys (DEVELOPMENT/TESTING ONLY!)
# ==================================

# ⚠️  SECURITY WARNING ⚠️
#
# DO NOT store production private keys in this file!
#
# Recommended approaches (in order of preference):
# 1. Hardware wallets: forge script --ledger or --trezor
# 2. Cast wallet: forge script --account <name> (encrypted keystore)
# 3. Interactive: forge script --private-key-interactive
# 4. .env variables: ONLY for local development/testing
#
# If using .env for development:
# - ✅ Create a dedicated test account
# - ✅ Fund with minimal testnet ETH only
# - ✅ Never reuse this key elsewhere
# - ❌ NEVER use production keys here
# - ❌ NEVER commit .env to version control

# Deployer private key (without 0x prefix)
# ONLY USE FOR LOCAL DEVELOPMENT OR TESTNET TESTING
# PRIVATE_KEY=

# Alternative: Mnemonic phrase
# ONLY USE FOR LOCAL DEVELOPMENT OR TESTNET TESTING
# MNEMONIC=

# ==================================
# Etherscan API Keys
# ==================================

# Ethereum
ETHERSCAN_API_KEY=your_etherscan_api_key

# Arbitrum
ARBISCAN_API_KEY=your_arbiscan_api_key

# Optimism
OPTIMISM_ETHERSCAN_API_KEY=your_optimism_etherscan_api_key

# Polygon
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Base
BASESCAN_API_KEY=your_basescan_api_key

# ==================================
# Gas Settings
# ==================================

# Gas price in gwei (optional, default uses network price)
GAS_PRICE=50

# Gas limit (optional)
GAS_LIMIT=5000000

# ==================================
# Deployment Configuration
# ==================================

# Network to deploy to
NETWORK=sepolia

# Verification settings
VERIFY_CONTRACTS=true

# ==================================
# Testing Configuration
# ==================================

# Fork testing
FORK_ENABLED=false
FORK_BLOCK_NUMBER=
